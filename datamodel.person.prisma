type Person @db(name: "person") {
	id: ID! @id
	birthDate: BirthDate!
	name: String!
	email: String! @unique
	phoneNumbers: [PhoneNumber!]!
	gender: Gender @default(value: M)
}

enum PhoneNumberType {
	MOBILE
	LAND_LINE
	MOBILE_APP
	WEB_APP
}

type PhoneNumber @db(name: "phone_number") {
	id: ID! @id
	type: PhoneNumberType! @default(value: MOBILE)
	owner: Person!
	isActive: Boolean! @default(value: true) # example of a boolean
	phoneUses: [PhoneUse!]! @relation(link: TABLE, name: "PhoneNumberPhoneUse")
}

type PhoneUse @db(name: "phone_use") {
	id: ID! @id
	use: String!
	phoneNumbers: [PhoneNumber!]! @relation(name: "PhoneNumberPhoneUse")
}

type PhoneNumberPhoneUse @db(name: "phone_number_phone_use") @relationTable {
	phoneNumber: PhoneNumber
	phoneUse: PhoneUse
}

enum Gender {
	M
	F
}

type BirthDate {
	id: ID! @id
	person: !
	date: Date!
}